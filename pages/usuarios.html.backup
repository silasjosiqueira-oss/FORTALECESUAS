            const nivelNome = usuario.nivel_nome || niveisAcesso[usuario.nivel_acesso_codigo]?.nome || usuario.nivel_acesso_codigo;

            alert(`Nome: ${usuario.nome}\nEmail: ${usuario.email}\nCPF: ${usuario.cpf || '-'}\nCargo: ${usuario.cargo || '-'}\nUnidade: ${usuario.unidade || '-'}\nNível: ${nivelNome}\nStatus: ${statusTexto}`);
