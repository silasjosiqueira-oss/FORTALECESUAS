        async function salvarUsuario(e) {
            e.preventDefault();

            const id = document.getElementById('usuario-id').value;
            const dados = {
                nome: document.getElementById('usuario-nome').value,
                email: document.getElementById('usuario-email').value,
                cpf: document.getElementById('usuario-cpf').value,
                telefone: document.getElementById('usuario-telefone').value,
                cargo: document.getElementById('usuario-cargo').value,
                unidade: document.getElementById('usuario-unidade').value,
                nivel_acesso_codigo: document.getElementById('usuario-nivel').value
            };

            if (!id) {
                const senha = document.getElementById('usuario-senha').value;
                const senhaConfirmar = document.getElementById('usuario-senha-confirmar').value;

                if (senha !== senhaConfirmar) {
                    mostrarNotificacao('As senhas não conferem', 'error');
                    return;
                }
                dados.senha = senha;
            }

            try {
                const method = id ? 'PUT' : 'POST';
                const url = id ? `${API_USUARIOS}/${id}` : API_USUARIOS;

                const res = await fetch(url, {
                    method,
                    headers: getHeaders(),
                    body: JSON.stringify(dados)
                });

                const result = await res.json();

                if (result.sucesso) {
                    mostrarNotificacao(result.mensagem, 'success');
                    fecharModalUsuario();
                    carregarUsuarios();
                } else {
                    mostrarNotificacao(result.mensagem, 'error');
                }
            } catch (error) {
                console.error('Erro ao salvar usuário:', error);
                mostrarNotificacao('Erro ao salvar usuário', 'error');
            }
        }

