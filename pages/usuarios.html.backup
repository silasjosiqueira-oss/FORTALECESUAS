        async function alterarStatusUsuario(id) {
            const usuario = usuarios.find(u => u.id === id);
            if (!usuario) return;

            const statusAtual = usuario.ativo ? 'ativo' : 'inativo';
            const novoAtivo = !usuario.ativo;

            if (!confirm(`Status atual: ${statusAtual}\n\nDeseja alternar para ${novoAtivo ? 'ativo' : 'inativo'}?`)) {
                return;
            }

            try {
                const res = await fetch(`${API_USUARIOS}/${id}/status`, {
                    method: 'PATCH',
                    headers: getHeaders(),
                    body: JSON.stringify({ ativo: novoAtivo })
                });

                const result = await res.json();

                if (result.sucesso) {
                    mostrarNotificacao(result.mensagem, 'success');
                    carregarUsuarios();
                } else {
                    mostrarNotificacao(result.mensagem, 'error');
